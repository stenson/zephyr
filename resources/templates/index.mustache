{{#teaser-index}}
  <ul class="post-listing">
    {{#ungrouped-articles}}
      <li {{#podcast}}class="podcast{{podcast}}"{{/podcast}}>
        <a href="/{{slug}}/">
          <em>{{#date}}{{month}}.{{day}}.{{year}}{{/date}}</em>
          <strong>{{title}}</strong>
          {{#teaser-image}}
            <img class="teaser" src="{{teaser-image}}"/>
          {{/teaser-image}}
          <span class="leder">{{lede}}</span>
          <p>{{{first-paragraph}}} <span class="continue">> Continue Reading...</span></p>
        </a>
      </li>
    {{/ungrouped-articles}}
  </ul>
{{/teaser-index}}
{{^teaser-index}}
{{#image-index}}
  <div class="inline-about">{{{inline-about}}}</div>
    <ul class="post-listing">
      {{#ungrouped-articles}}
        <li>
          <a href="/{{slug}}/">
            <em>{{#date}}{{{string}}}{{/date}}</em>
            <div class="img" style="background-image:url({{meta-image}})"></div>
            <span>{{lede}}</span>
          </a>
        </li>
      {{/ungrouped-articles}}
    </ul>
{{/image-index}}
{{^image-index}}
{{#grouped-index}}
  {{#grouped-articles}}
    <div class="posts-month">
      <div class="posts-group-date">{{#date}}{{month-name}}, {{year}}{{/date}}</div>
      <ul class="post-listing">
        {{#articles}}
          <li>
            <a href="/{{slug}}/">
              <span class="date">{{#date}}{{day}}{{/date}}</span>
              <span class="title">{{title}}</span>
              <span class="ellipses">...</span>
              <span class="author">{{author}}</span>
            </a>
          </li>
        {{/articles}}
      </ul>
    </div>
  {{/grouped-articles}}
{{/grouped-index}}
{{^grouped-index}}
  {{#grouped-articles}}
    <ul class="post-listing">
      {{#articles}}
        <li>
          <a href="/{{slug}}/">
            {{title}}&nbsp;<span class="date">&nbsp;{{#date}}{{string}}{{/date}}</span>
          </a>
          <!--<span class="tags">{{#tags}}#<em>{{.}}</em>{{/tags}}</span>-->
          <span class="lede">{{lede}}</span>
        </li>
      {{/articles}}
    </ul>
  {{/grouped-articles}}
{{/grouped-index}}
{{/image-index}}
{{/teaser-index}}